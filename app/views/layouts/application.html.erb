<!DOCTYPE html>
<html>
<head>
  <title>SwStories</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |type, message| %>
  <p class='<%= type %>'><%= "#{message}" %></div>
<% end %>


<%= render partial: 'layouts/navbar' %>


<%= yield %>

<% if user_signed_in? %>
  <%= render partial: 'prompts/new_prompts' %>
  <%= render partial: 'prompts/all', locals: { prompts: current_user.prompts } unless @prompts %>
<% end %>


</body>
</html>
